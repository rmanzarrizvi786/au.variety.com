<div class="search-form // {{ search_form_classes }}">
	<div class="search-form__inner {{ search_form_inner_classes }}">
		{% if search_form_is_swiftype %}
			<div data-st-search-form="small_search_form"></div>
		{% else %}
			<form class="search-form" action="{{ search_form_action_url }}" role="search" method="get">
				<label class="{{ search_form_input_label_classes }}">
					<span class="lrv-a-screen-reader-only">Search for:</span>
					<input class="{{ search_form_input_classes }}" type="search" placeholder="{{ search_form_input_placeholder_attr }}" value="" name="s">
				</label>
				<input class="{{ search_form_submit_classes }}" type="submit" value="{{ search_form_submit_text }}">
			</form>
		{% endif %}
	</div>
</div>
