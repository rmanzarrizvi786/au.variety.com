<section class="explore-all-events // {{ explore_all_events_carousel_classes }}" data-collapsible="collapsed">
	<div class="lrv-a-wrapper // lrv-u-flex@tablet lrv-u-align-items-center lrv-u-justify-content-space-between lrv-u-margin-b-1@tablet lrv-u-padding-lr-2">
		{% if o_more_from_heading %}
			{% include "@project/objects/o-more-from-heading/o-more-from-heading.twig" with o_more_from_heading %}
		{% endif %}

		<div data-collapsible-toggle>
			{% include "@project/objects/o-more-link/o-more-link.twig" with o_more_link_desktop %}
		</div>
	</div>

	<div class="explore-all-events__inner // {{ explore_all_events_inner_classes }}">
		{% for item in explore_all_events_items %}
			<div class="explore-all-events__item // {{ explore_all_events_item_classes }}">
				{% include "@project/objects/o-slide/o-slide.twig" with item %}
			</div>
		{% endfor %}
	</div>

	<div class="explore-all-events__inner-hidden // {{ explore_all_events_inner_hidden_classes }}" data-collapsible-panel>
		{% for item in explore_all_events_hidden_items %}
			<div class="explore-all-events__item // {{ explore_all_events_item_hidden_classes }}">
				{% include "@project/objects/o-slide/o-slide.twig" with item %}
			</div>
		{% endfor %}
	</div>

	<div class="lrv-a-wrapper" data-collapsible-toggle>
		{% include "@project/objects/o-more-link/o-more-link.twig" with o_more_link %}
	</div>
</section>
